<?xml version="1.0" encoding="utf-8"?>
<resources>

        <!-- the theme applied to the application or activity -->
        <style name="CustomTheme"
            parent="@android:style/Theme.Holo.Light.DarkActionBar">
            <item name="android:actionBarStyle">@style/CustomTheme.MyActionBar</item>
            <item name="android:actionBarWidgetTheme">@style/CustomTheme.PopupMenu</item>
            <item name="android:actionOverflowButtonStyle">@style/CustomTheme.Overflow</item>
            <item name="android:actionBarItemBackground">@drawable/selectable_background</item>
            <item name="android:dropDownListViewStyle">@style/CustomTheme.DropDownListView</item>
            <item name="android:actionDropDownStyle">@style/CustomTheme.DropDownNav</item>
            <item name="android:itemTextAppearance">@style/CustomTheme.TextAppearance</item>
            <item name="android:itemBackground">@drawable/overflow_background</item>
        </style>

    <!-- ActionBar styles -->
    <style name="CustomTheme.MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@android:color/white</item>
        <item name="android:titleTextStyle">@style/CustomTheme.MyActionBar.ActionBarText</item>

    </style>


    <style name="CustomTheme.MyActionBar.ActionBarText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTheme.Overflow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

    <style name="CustomTheme.DropDownListView" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/overflow_background</item>
    </style>



    <style name="CustomTheme.PopupMenu" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/CustomTheme.PopupMenuBackground</item>
    </style>

    <style name="CustomTheme.PopupMenuBackground" parent="android:Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="CustomTheme.TextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTheme.DropDownNav" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@color/white</item>
        <item name="android:popupBackground">@color/lloyds_green</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_actionbar</item>
    </style>

</resources>
