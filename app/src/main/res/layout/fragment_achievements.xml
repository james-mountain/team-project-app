<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.ac.ncl.cs.team16.lloydsbankingapp.Fragments.AchievementsFragment"
    android:background="@color/almost_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/lloyds_green"
            android:paddingLeft="@dimen/generic_listview_padding"
            android:paddingRight="@dimen/generic_listview_padding"
            android:layout_weight="0.72">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Points: "
                android:textColor="@color/white"
                android:id="@+id/pointsTextView"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/pointsTextView"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_large" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.28"
            android:background="@color/lloyds_green"
            android:paddingLeft="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Rewards Shop"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/white"
                android:id="@+id/buttonToShop"
                style="@style/button_style"/>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target Achievements"
        android:textSize="@dimen/text_size_large"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/generic_listview_padding"
        android:paddingRight="@dimen/generic_listview_padding"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/achievementsListView" >



    </ListView>




</LinearLayout>
