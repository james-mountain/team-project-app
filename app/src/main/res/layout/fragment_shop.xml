<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="uk.ac.ncl.cs.team16.lloydsbankingapp.Fragments.ShopFragment"
    android:background="@color/almost_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/generic_listview_height"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@color/lloyds_green">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Back"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/white"
                style="@style/button_style"
                android:id="@+id/buttonToAchievements"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/lloyds_green"
            android:paddingLeft="@dimen/generic_listview_padding"
            android:paddingRight="@dimen/generic_listview_padding"
            android:layout_weight="0.7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Rewards"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true" />

        </RelativeLayout>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:id="@+id/yourRewardsListView">

    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/generic_listview_height"
        android:background="@color/lloyds_green">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rewards to Purchase"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:id="@+id/availableRewardsListView">

    </ListView>

</LinearLayout>
